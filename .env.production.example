# Production Environment Configuration
# Copy this file to .env on your production server
# and fill in your actual production values

# Database Configuration
POSTGRES_DB=hochzeit_production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# Backend Configuration  
DATABASE_URL=postgresql://postgres:YOUR_SECURE_DB_PASSWORD_HERE@db:5432/hochzeit_production
ENVIRONMENT=production

# CORS Configuration (replace with your actual domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration (replace with your actual domain)
REACT_APP_API_URL=https://yourdomain.com/api

# Admin Configuration
REACT_APP_ADMIN_PASSWORD=your-secure-admin-password-here

# Optional: SSL Email for Let's Encrypt
SSL_EMAIL=your-email@example.com

# Optional: Domain for SSL certificate
DOMAIN=yourdomain.com